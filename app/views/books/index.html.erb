<h1 class=heading>Books</h1>
<table>
  <thred>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan=3></th>
    </tr>
  </thred>
  <tbody>
    <% @books.each do |book|%>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show", book_path(book) %></td>
        <td><%= link_to "edit", edit_book_path(book) %></td>
        <td><%= link_to "destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2 class=heading_new>New book</h2>
<div class=format >
  <%= form_with model:@book, local:true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %>
    <%= f.submit "Create Book"%>
  <% end %>
</div>