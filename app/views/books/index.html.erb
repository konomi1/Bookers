<h1 class=heading>Books</h1>
<table>
  <thred>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan=3></th>
    </tr>
  </thred>
  <tbody>
    <% @books.each do |book|%>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2 class=heading_new>New book</h2>


<% if @book.errors.any? %>
  <div class=error-box>
    <h2 class=error-heading><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul class=error-message>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>

<div class=format >
  <%= form_with model:@book, local:true do |f| %>

    <div class=field>
      <p class=title>Title</p>
      <%= f.text_field :title %>
    </div>
    <div class=field>
      <p class=title>Body</p>
      <%= f.text_area :body %>
    </div>
    <div class=field>
      <%= f.submit "Create Book"%>
    </div>

  <% end %>
</div>